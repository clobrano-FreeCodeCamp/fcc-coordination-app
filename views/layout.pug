html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    
  body
    div.navbar.navbar-default.navbar-static-top
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a.navbar-brand(href="/") Aundi

        div.navbar-collapse.collapse(id="navbar")
          ul.nav.navbar-nav.navbar-right
            if loggedin
              li(role="presentation")
                p.navbar-text
                  strong= `Logged in as ${username}`
              li(role="presentation"): a(href="/logout") Logout
            else
              li(role="presentation"): a(href="/login") Sign In 
              li(role="presentation"): a(href="/register") Sign Up 
            
    block content

    div.footer

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
