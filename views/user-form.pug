extends layout
block content
  div.container
    if messages && messages.length
        each msg in messages
          .alert.alert-danger
            span= msg
  .wrapper
    form.form-signin(action= action, method="POST")

      h2.form-signin-heading= title
      label(for="username") Username:
      .input-group
        span.input-group-addon(id="username-addon")
          span.glyphicon.glyphicon-user
        input.form-control(type="text", name="username")
      label(for="password")
      .input-group
        span.input-group-addon(id="password-addon")
          span.glyphicon.glyphicon-lock
        input.form-control(type="password", name="password")
      br
      button.btn.btn-lg.btn-success.btn-block(type="submit")= buttonSubmit
