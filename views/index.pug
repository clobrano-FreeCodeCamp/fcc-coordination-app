extends layout
block content
  div.container
    div.row
      each place in places
        div.col-md-4.vcenter
            div.row
              h4.text-center(style="text-transform: capitalize")= place.title
            div.row
              div.col-md-6.vcenter
                img(src=img)
              div.col-md-6.vcenter
                p=place.body
            div.row
              div.col-md-6.vcenter
                button.btn.btn-default="Going"
              div.col-md-6.vcenter
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star-empty

 
